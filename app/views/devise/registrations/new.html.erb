<div class="p-5 col-4">
  <h2>Novo Cadastro</h2>

  <form action="<%= registration_path(resource_name) %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class='py-2'>
      <md-outlined-text-field label="E-mail" name="user[email]"  id="email" type="text"></md-outlined-text-field>
    </div>
    <div class='py-2'>
      <md-outlined-text-field label="Senha" name="user[password]"  id="password" type="password"></md-outlined-text-field>
      <% if @minimum_password_length %><em>(A senha deve conter no mÃ­nimo <%= @minimum_password_length %> caracteres)</em><% end %><br />
    </div>
    <div class='py-2'>
      <md-outlined-text-field label="Confirmar Senha" name="user[password_confirmation]"  id="password_confirmation" type="password"></md-outlined-text-field>
    </div>

    <div class="actions">
      <md-outlined-button type="submit">Cadastrar</md-outlined-button>
    </div>
  </form>

  <%= render "devise/shared/links" %>
</div>

