<div class="p-5 col-4">
  <h2>Log in</h2>

  <form action="<%= session_path(resource_name) %>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class='py-2'>
      <md-outlined-text-field label="E-mail" name="user[email]"  id="email" type="text"></md-outlined-text-field>
    </div>
    <div class='py-2'>
      <md-outlined-text-field label="Senha" name="user[password]"  id="password" type="password"></md-outlined-text-field>
    </div>

    <% if devise_mapping.rememberable? %>
      <md-checkbox touch-target="wrapper" type="checkbox" name="user[remember_me]" id="remember_me" checked></md-checkbox>
      <label for="remember_me" class="pt-2">Lembrar de mim</label>
    <% end %>

    <div class="actions">
      <md-outlined-button type="submit">Entrar</md-outlined-button>
    </div>
  </form>

  <%= render "devise/shared/links" %>
</div>
